{
  "name": "back-grappa2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test nyc ava | tnyan",
    "test-tap": "NODE_ENV=test nyc ava",
    "start": "NODE_ENV=development nodemon index.js",
    "start:win": "nodemon index.js",
    "start:prod": "knex --knexfile ./src/db/knexfile.js --cwd . migrate:latest; NODE_ENV=production node index.js",
    "db:migrate": "knex --knexfile ./src/db/knexfile.js --cwd . migrate:latest",
    "db:seed": "knex --knexfile ./src/db/knexfile.js --cwd . seed:run",
    "db:reset": "knex --knexfile ./src/db/knexfile.js --cwd . migrate:rollback",
    "build": "BABEL_ENV=production babel --out-dir=dist index.js",
    "report": "nyc report --reporter=html",
    "lint": "eslint --ext .js src || true",
    "apidoc": "apidoc -i src -o apidoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UniversityOfHelsinkiCS/back-grappa2"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UniversityOfHelsinkiCS/back-grappa2/issues"
  },
  "homepage": "https://github.com/UniversityOfHelsinkiCS/back-grappa2#readme",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bookshelf": "^0.12.1",
    "busboy": "^0.2.14",
    "checkit": "^0.7.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "express-fileupload": "^0.4.0",
    "express-graceful-exit": "^0.4.1",
    "form-data": "^2.3.2",
    "husky": "^0.15.0-rc.8",
    "jsonwebtoken": "^8.1.1",
    "jszip": "^3.1.5",
    "knex": "^0.14.4",
    "moment": "^2.20.1",
    "multer": "^1.3.0",
    "node-pdftk": "^1.2.2",
    "nodemailer": "^4.6.0",
    "pg": "^7.4.1",
    "request": "^2.83.0",
    "utf8": "^3.0.0",
    "validator": "^9.4.1",
    "winston": "^3.0.0-rc1",
    "xml2js": "^0.4.19",
    "xmlbuilder": "^9.0.7"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "ava": "^0.25.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.18.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "nodemon": "^1.17.1",
    "nyc": "^11.5.0",
    "reqres": "^2.1.0",
    "sinon": "^4.4.2",
    "standard": "^11.0.0",
    "supertest": "^3.0.0",
    "tap-nyan": "^1.1.0"
  },
  "ava": {
    "files": [
      "test/**/*.spec.js"
    ],
    "source": [
      "**/*.{js,jsx}",
      "!dist/**/*"
    ],
    "concurrency": 8,
    "failFast": true,
    "failWithoutAssertions": true,
    "tap": true,
    "powerAssert": false,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "apidoc": {
    "name": "Grappa backend",
    "url": "https://grappa.cs.helsinki.fi/v2api/"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  }
}
